<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/cvDoneListItemImageLayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/imageDoneListItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_sayur_bawangbombay" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/textnameDoneListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cvDoneListItemImageLayout"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/cvDoneListItemImageLayout"
                android:text="Bawang Bombay"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textdoneinfoDoneListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textnameDoneListItem"
                android:layout_marginEnd="81dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@id/cvDoneListItemImageLayout"
                android:text="Sudah diterima"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>