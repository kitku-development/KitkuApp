<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textOrderAddressNameItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Evan Edsa Azola"
        android:textColor="@color/colorBlack"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textOrderAddressItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOrderAddressNameItem"
        android:layout_marginTop="16dp"
        android:text="No. Telepon : "
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textOrderAddressPhoneItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOrderAddressNameItem"
        android:layout_toEndOf="@id/textOrderAddressItem1"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:text="082175719430"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textOrderAddress_AddressItem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOrderAddressItem1"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Komplek Filano Jaya I, Kubu Parak Karakah"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textOrderAddress_AddressItem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOrderAddress_AddressItem1"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Padang Timur, Padang"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textOrderAddress_AddressItem3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textOrderAddress_AddressItem2"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="8dp"
        android:text="Sumatera Barat"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

</RelativeLayout>