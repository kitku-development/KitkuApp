<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Detail_ItemActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbarDetail_Item"
                style="@style/Toolbar">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/textitemnameToolbarDetail_Item"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wortel"
                        android:layout_marginStart="16dp"
                        android:layout_centerVertical="true"
                        android:layout_toEndOf="@id/buttonToolbarDetail_ItemBack"
                        android:textSize="20sp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"/>

                    <Button
                        android:id="@+id/buttonToolbarDetail_ItemBack"
                        style="@style/ButtonToolbarBack"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </android.support.v7.widget.Toolbar>

            <View
                android:id="@+id/lineDetail_Item1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/toolbarDetail_Item"
                android:background="#D6D6D6" />

            <ImageView
                android:id="@+id/imageDetail_Item"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/detailitem_item_content_desc_image"
                android:layout_below="@id/lineDetail_Item1"
                android:scaleType="fitXY"
                android:src="@drawable/image_sayur_wortel"/>

            <View
                android:id="@+id/lineDetail_Item2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@id/imageDetail_Item"
                android:background="#D6D6D6" />

            <TextView
                android:id="@+id/textitemnameDetail_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wortel"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/lineDetail_Item2"
                android:textSize="28sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textitempackDetail_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 pack (100gr)"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_below="@id/textitemnameDetail_Item"
                android:textSize="14sp"
                android:textColor="@color/colorBlack" />

            <TextView
                android:id="@+id/textitempriceDetail_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp 15.000"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_below="@id/textitempackDetail_Item"
                android:textSize="24sp"
                android:textColor="@color/colorSecondary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textpackDetail_Item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textitempackDetail_Item"
                android:gravity="bottom"
                android:layout_marginStart="3dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="6dp"
                android:layout_toEndOf="@id/textitempriceDetail_Item"
                android:layout_alignBottom="@id/textitempriceDetail_Item"
                android:textSize="14sp"
                android:text="/1 pack"
                android:textColor="@color/colorBlack"/>

            <View
                android:id="@+id/lineDetail_Item3"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/textpackDetail_Item"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@color/colorSecondary" />

            <TextView
                android:id="@+id/txtDetail_Item1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Produk"
                android:layout_marginTop="12dp"
                android:layout_below="@id/lineDetail_Item3"
                android:layout_centerHorizontal="true"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textitemdescriptionDetail_Item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wortel adalah tumbuhan biennial (siklus hidup 12 - 24 bulan) yang menyimpan karbohidrat dalam jumlah besar untuk tumbuhan tersebut berbungga pada tahun kedua. Batang bunga tumbuh setinggi sekitar 1m, dengan bunga berwarna putih, dan rasa manis yang langu"
                android:ellipsize="end"
                android:layout_marginBottom="14dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="6dp"
                android:layout_below="@id/txtDetail_Item1"
                android:textSize="14sp"
                android:textColor="@color/colorBlack" />

        </RelativeLayout>
    </ScrollView>

    <Button
        android:id="@+id/buttonDetail_Item_BuyItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:text="Beli Produk"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:textSize="14sp"
        android:onClick="buttonBuyItem"/>

</RelativeLayout>