<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOnProgressListItemImageLayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/imageOnProgressListItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/content_desc_image_item"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_sayur_bawangbombay_compressed" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textnameOnProgressListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cvOnProgressListItemImageLayout"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/cvOnProgressListItemImageLayout"
                android:text="Bawang Bombay"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textprogressOnProgressListItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/textnameOnProgressListItem"
                android:layout_marginBottom="6dp"
                android:layout_marginEnd="81dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/cvOnProgressListItemImageLayout"
                android:text="Sedang dalam proses pengemasan"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>