<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginStart="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginBottom="8dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="4dp">
    
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">
        
        <ImageView
            android:id="@+id/imageCategoryItem"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:contentDescription="@string/listitem_content_desc_image"
            tools:src="@drawable/image_sayur_bawangbombay"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/textnameCategoryItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageCategoryItem"
            android:layout_marginTop="12dp"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            tools:text="Bawang Bombay"/>

        <TextView
            android:id="@+id/textpriceCategoryItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textnameCategoryItem"
            android:layout_marginTop="2dp"
            android:textColor="@color/colorSecondary"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Rp 10.000"/>

        <TextView
            android:id="@+id/textpackCategoryItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textnameCategoryItem"
            android:gravity="bottom"
            android:layout_marginStart="3dp"
            android:layout_marginTop="4dp"
            android:layout_toEndOf="@id/textpriceCategoryItem"
            android:layout_alignBottom="@id/textpriceCategoryItem"
            android:textSize="12sp"
            tools:text="/1 pack"/>
        
    </RelativeLayout>
</android.support.v7.widget.CardView>