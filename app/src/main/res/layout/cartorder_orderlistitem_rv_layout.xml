<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvOrderListItemImageLayout"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="8dp">
                <ImageView
                    android:id="@+id/imageOrderListItem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/content_desc_image_item"
                    android:scaleType="fitXY"
                    android:src="@drawable/image_sayur_bawangbombay" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textnameOrderListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/cvOrderListItemImageLayout"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/cvOrderListItemImageLayout"
                android:text="Bawang Bombay"
                android:textColor="@color/colorBlack"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textpriceOrderListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textnameOrderListItem"
                android:layout_marginStart="12dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/cvOrderListItemImageLayout"
                android:text="Rp 15.000"
                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textpackOrderListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textpriceOrderListItem"
                android:layout_marginStart="12dp"
                android:layout_toEndOf="@id/cvOrderListItemImageLayout"
                android:text="/pack"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/imagebtnaddorderOrderListItem"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_add"
                android:contentDescription="@string/content_desc_add_imagebutton"/>

            <TextView
                android:id="@+id/textorderamountOrderListItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:layout_toStartOf="@id/imagebtnaddorderOrderListItem"
                android:background="@drawable/cartorder_circle_background"
                android:gravity="center_vertical|center_horizontal"
                android:text="1"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/imagebtnremoveorderOrderListItem"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toStartOf="@id/textorderamountOrderListItem"
                android:layout_centerVertical="true"
                android:layout_marginEnd="4dp"
                android:contentDescription="@string/content_desc_remove_imagebutton"
                android:background="@drawable/ic_remove"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>