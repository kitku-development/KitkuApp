<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <TextView
        android:id="@+id/textOrderTimeItem1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pesanan anda akan dikirimkan pada :"
        android:textColor="@color/colorBlack"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textOrderTimeDatetimeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Jum'at 13 Desember 2019"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/textOrderTime_TimeItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sore (ETA. 17:00 - 20:00 WIB)"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"/>


</LinearLayout>